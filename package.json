{
    "name": "vscode-llm-copilot",
    "displayName": "LLM Copilot",
    "description": "Chat with multiple LLMs (Gemini, ChatGPT, Claude, Grok) in VS Code",
    "version": "0.0.1",
    "publisher": "User",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/vscode-llm-copilot"
    },
    "icon": "media/chat-icon.svg",
    "license": "MIT",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-llm-copilot.chat",
                "title": "Open LLM Chat"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "llm-copilot-sidebar-view",
                    "title": "LLM Copilot",
                    "icon": "media/chat-icon.svg"
                }
            ]
        },
        "views": {
            "llm-copilot-sidebar-view": [
                {
                    "type": "webview",
                    "id": "llm-copilot.chatView",
                    "name": "Chat"
                }
            ]
        },
        "configuration": {
            "title": "LLM Copilot",
            "properties": {
                "llmCopilot.defaultProvider": {
                    "type": "string",
                    "enum": [
                        "gemini",
                        "openai",
                        "anthropic",
                        "grok"
                    ],
                    "default": "gemini",
                    "description": "Default LLM provider to use."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "ts-loader": "^9.4.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1",
        "@vscode/test-electron": "^2.3.2"
    },
    "dependencies": {
        "@google/generative-ai": "^0.1.3",
        "openai": "^4.20.1",
        "@anthropic-ai/sdk": "^0.10.2"
    }
}